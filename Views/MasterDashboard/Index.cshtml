@model MasterServicePlatform.Web.Models.Master
@{
    ViewData["Title"] = "My Master Profile";
}

<h2 class="mb-3">My Master Profile</h2>

@if (Model == null)
{
    <div class="alert alert-warning">No profile yet.</div>
    <a asp-action="CreateProfile" class="btn btn-primary">Create Profile</a>
}
else
{
    <div class="card shadow-sm p-4">
        <h4 class="mb-3">@Model.FullName</h4>
        <p><strong>Profession:</strong> @Model.Profession</p>
        <p><strong>Experience:</strong> @Model.ExperienceYears years</p>
        <p><strong>Price per hour:</strong> @Model.PricePerHour €</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary"
           asp-controller="Masters" asp-action="Edit" asp-route-id="@Model.Id">
            Edit public card
        </a>
    </div>
}

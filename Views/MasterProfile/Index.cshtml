@model MasterServicePlatform.Web.Models.Master
@using MasterServicePlatform.Web.Models
@{
    ViewData["Title"] = "My Master Profile";
}

<div class="container mt-5">

    @if (TempData["Saved"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> Profile updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-tools me-2"></i> My Master Profile
            </h4>

            <div>
                <button class="btn btn-danger btn-sm me-2" onclick="openDeleteMasterPopup()">
                    <i class="bi bi-trash"></i> Delete Master Profile
                </button>

                <a asp-action="Edit" class="btn btn-light btn-sm">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">

                <!-- Avatar -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.AvatarPath))
                    {
                        <img src="@Model.AvatarPath" width="150" class="rounded-circle shadow mb-3" />
                    }
                    else
                    {
                        <img src="/img/default-avatar.png" width="150" class="rounded-circle shadow mb-3" />
                    }

                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <!-- Info -->
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">City:</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">Profession:</dt>
                        <dd class="col-sm-8">@Model.Profession</dd>

                        <dt class="col-sm-4">Experience:</dt>
                        <dd class="col-sm-8">@Model.ExperienceYears years</dd>

                        <dt class="col-sm-4">Price per hour:</dt>
                        <dd class="col-sm-8">@Model.PricePerHour €</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Verification:</dt>
                        <dd class="col-sm-8">
                            @{
                                var color = Model.VerificationStatus switch
                                {
                                    VerificationStatus.Verified => "success",
                                    VerificationStatus.Pending => "warning",
                                    VerificationStatus.Rejected => "danger",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@color">@Model.VerificationStatus</span>
                        </dd>
                    </dl>
                </div>

            </div>

            <hr />

            <h5>Description</h5>
            <p>@Model.Description</p>

            <hr />

            <!-- PORTFOLIO -->
            <h5 class="mt-4 d-flex justify-content-between align-items-center">
                <span>My Portfolio</span>

                <div>
                    <a asp-controller="MasterPortfolio" asp-action="Index" class="btn btn-outline-secondary btn-sm me-2">
                        <i class="bi bi-images"></i> View All
                    </a>

                    <a asp-action="UploadPhoto" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Photo
                    </a>
                </div>
            </h5>

            @if (Model.PortfolioPhotos != null && Model.PortfolioPhotos.Any())
            {
                <div class="row mt-3">
                    @foreach (var photo in Model.PortfolioPhotos)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card shadow-sm position-relative">

                                <!-- Delete button -->
                                <form asp-controller="MasterPortfolio"
                                      asp-action="Delete"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this photo?');"
                                      class="position-absolute"
                                      style="top:5px; right:5px; z-index:10;">
                                    <input type="hidden" name="id" value="@photo.Id" />
                                    <button class="btn btn-danger btn-sm rounded-circle p-1"
                                            title="Delete photo">
                                        <i class="bi bi-x-lg" style="font-size:12px;"></i>
                                    </button>
                                </form>

                                <img src="@photo.PhotoPath"
                                     class="card-img-top portfolio-photo"
                                     style="height:180px;object-fit:cover; cursor:pointer;" />


                                <div class="card-body">
                                    <small class="text-muted">
                                        Uploaded: @photo.UploadedAt.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">You haven't added any portfolio photos yet.</p>
            }

        </div>
    </div>
</div>


<!-- Delete Master Profile Popup -->
<div id="deleteMasterPopup" class="modal-overlay" style="display:none;">
    <div class="modal-box">
        <h4 class="text-danger mb-3">Delete Master Profile?</h4>
        <p>Your portfolio, reviews and master profile data will be removed.</p>

        <form method="post" asp-action="DeleteAccount">
            <button type="submit" class="btn btn-danger w-100 mb-2">Yes, delete</button>
            <button type="button" class="btn btn-secondary w-100" onclick="closeDeleteMasterPopup()">Cancel</button>
        </form>
    </div>
</div>

<script>
    function openDeleteMasterPopup() {
        document.getElementById("deleteMasterPopup").style.display = "flex";
    }
    function closeDeleteMasterPopup() {
        document.getElementById("deleteMasterPopup").style.display = "none";
    }
</script>

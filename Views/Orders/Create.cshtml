@model MasterServicePlatform.Web.Models.ViewModels.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MasterId" />

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PreferredDate"></label>
        <input asp-for="PreferredDate" type="date" class="form-control" />
        <span asp-validation-for="PreferredDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PreferredTime"></label>
        <input asp-for="PreferredTime" type="time" class="form-control" />
        <span asp-validation-for="PreferredTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Budget"></label>
        <input asp-for="Budget" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ServiceCategory"></label>
        <input asp-for="ServiceCategory" class="form-control" />
        <span asp-validation-for="ServiceCategory" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Attachment"></label>
        <input asp-for="Attachment" type="file" class="form-control" />
        <span asp-validation-for="Attachment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

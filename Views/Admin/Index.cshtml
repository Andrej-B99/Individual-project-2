@model MasterServicePlatform.Web.Controllers.AdminDashboardViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="mb-1">Dashboard</h2>
        <p class="text-muted mb-0">Quick overview of the platform activity.</p>
    </div>
</div>

<!-- First row: main counts -->
<div class="row g-3 mb-3">
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Total users</div>
                <div class="fs-3 fw-semibold">@Model.TotalUsers</div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Masters</div>
                <div class="fs-3 fw-semibold">@Model.TotalMasters</div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Orders</div>
                <div class="fs-3 fw-semibold">@Model.TotalOrders</div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Average rating</div>
                <div class="fs-3 fw-semibold">@Model.AverageRating</div>
            </div>
        </div>
    </div>
</div>

<!-- Second row: verification / blocked -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Verified masters</div>
                <div class="fs-3 fw-semibold text-success">@Model.VerifiedMasters</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Pending masters</div>
                <div class="fs-3 fw-semibold text-warning">@Model.PendingMasters</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small">Blocked users</div>
                <div class="fs-3 fw-semibold text-danger">@Model.BlockedUsers</div>
            </div>
        </div>
    </div>
</div>

<!-- Quick links -->
<div class="row">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary btn-sm">
                    Manage users
                </a>
                <a asp-controller="Admin" asp-action="Masters" class="btn btn-outline-primary btn-sm">
                    Manage masters
                </a>
                <a asp-controller="Admin" asp-action="Orders" class="btn btn-outline-primary btn-sm">
                    View orders
                </a>
            </div>
        </div>
    </div>
</div>

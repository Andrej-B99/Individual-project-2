@model List<MasterServicePlatform.Web.Models.PortfolioPhoto>

@{
    ViewData["Title"] = "All Portfolio Photos";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-images me-2"></i> All Portfolio Photos</h3>

        <a asp-controller="MasterProfile" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Profile
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            You have no portfolio photos yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var photo in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm position-relative">

                        <!-- Delete button -->
                        <form asp-action="Delete" method="post"
                              onsubmit="return confirm('Are you sure you want to delete this photo?');"
                              class="position-absolute"
                              style="top:6px; right:6px; z-index:10;">
                            <input type="hidden" name="id" value="@photo.Id" />
                            <button class="btn btn-danger btn-sm rounded-circle p-1">
                                <i class="bi bi-x-lg" style="font-size:12px;"></i>
                            </button>
                        </form>

                        <img src="@photo.PhotoPath"
                             class="card-img-top"
                             style="height:200px; object-fit:cover;" />

                        <div class="card-body">
                            <small class="text-muted">
                                Uploaded: @photo.UploadedAt.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
